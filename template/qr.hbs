  <script>
        // Function to check connection status from the server
        function checkConnectionStatus() {
            fetch('/connection-status')
                .then(response => response.json())
                .then(data => {
                    const statusMessage = document.querySelector('.status-message');
                    const logoutContainer = document.getElementById('logoutContainer');

                    // Update the status message based on the server's response
                    if (data.isConnected) {
                        statusMessage.textContent = 'Connected';

                        // Create a logout button if not already present
                        if (!logoutContainer.querySelector('button')) {
                            const logoutButton = document.createElement('button');
                            logoutButton.textContent = 'Logout';
                            logoutButton.onclick = () => {
                                // Add functionality for logout here
                                window.location.href = '/logoutWA'; // Adjust as per your routing
                            };
                            logoutContainer.appendChild(logoutButton);
                        }
                    } else {
                        statusMessage.textContent = 'Waiting for your phone...';

                        // Remove the logout button if present
                        if (logoutContainer.querySelector('button')) {
                            logoutContainer.innerHTML = '';
                        }
                    }
                })
                .catch(error => {
                    console.error('Error checking connection status:', error);
                });
        }

        // Check the connection status every 5 seconds
        setInterval(checkConnectionStatus, 5000); // Adjust the interval as needed
    </script>
